<AnchorPane id="AnchorPane" prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #CAE5DE 0%, #EFF0F2 50%, #C8DAE6 100%);" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.notif1ed.controller.RecordsPageController">
    <stylesheets>
        <URL value="@../css/table-styles.css" />
    </stylesheets>
   <children>
      <!-- Standardized Navbar -->
      <Pane layoutX="0.0" layoutY="0.0" prefHeight="90.0" prefWidth="1920.0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
         <children>
            <ImageView fitHeight="105.0" fitWidth="185.0" layoutX="39.0" layoutY="-8.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../Notifyed/logo.png" />
               </image>
            </ImageView>
            <Button fx:id="homeButton" graphicTextGap="10.0" layoutX="531.0" layoutY="24.0" lineSpacing="100.0" mnemonicParsing="false" onAction="#handleHomeClick" prefHeight="43.0" prefWidth="197.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="HOME" textFill="#616161">
               <font>
                  <Font name="Poppins Bold" size="20.0" />
               </font>
            </Button>
            <Button fx:id="subjectsButton" graphicTextGap="10.0" layoutX="760.0" layoutY="24.0" lineSpacing="100.0" mnemonicParsing="false" onAction="#handleSubjectsClick" prefHeight="43.0" prefWidth="197.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="SUBJECTS" textFill="#616161">
               <font>
                  <Font name="Poppins Bold" size="20.0" />
               </font>
            </Button>
            <Button fx:id="studentsButton" graphicTextGap="10.0" layoutX="991.0" layoutY="24.0" lineSpacing="100.0" mnemonicParsing="false" onAction="#handleStudentsClick" prefHeight="43.0" prefWidth="197.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="STUDENTS" textFill="#616161">
               <font>
                  <Font name="Poppins Bold" size="20.0" />
               </font>
            </Button>
            <Button fx:id="recordsButton" graphicTextGap="10.0" layoutX="1220.0" layoutY="24.0" lineSpacing="100.0" mnemonicParsing="false" onAction="#handleRecordsClick" prefHeight="43.0" prefWidth="197.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="RECORDS" textFill="#00897B">
               <font>
                  <Font name="Poppins Bold" size="20.0" />
               </font>
            </Button>
            <Button fx:id="logoutButton" graphicTextGap="10.0" layoutX="1685.0" layoutY="24.0" lineSpacing="100.0" mnemonicParsing="false" onAction="#handleLogoutClick" prefHeight="43.0" prefWidth="180.0" style="-fx-background-color: linear-gradient(to bottom, #f44336, #d32f2f); -fx-background-radius: 22; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(244,67,54,0.3), 8, 0, 0, 3);" text="LOGOUT" textFill="WHITE">
               <font>
                  <Font name="Poppins Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </Pane>
      
      <!-- Page Header with Professional Design -->
      <Text layoutX="50.0" layoutY="165.0" strokeType="OUTSIDE" strokeWidth="0.0" text="RECORDS" fill="#00897B">
         <font>
            <Font name="Poppins Bold" size="48.0" />
         </font>
      </Text>
      <Text layoutX="50.0" layoutY="192.0" strokeType="OUTSIDE" strokeWidth="0.0" text="View student activity logs and email history" fill="#616161" opacity="0.75">
         <font>
            <Font name="Poppins Regular" size="16.0" />
         </font>
      </Text>
      
      <!-- Main Content Card -->
      <Pane layoutX="50.0" layoutY="220.0" prefHeight="800.0" prefWidth="1820.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 5);">
         <children>
            <Text layoutX="30.0" layoutY="55.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Student Records" fill="#424242">
               <font>
                  <Font name="Poppins Bold" size="32.0" />
               </font>
            </Text>
            
            <!-- Search Bar -->
            <Pane layoutX="30.0" layoutY="70.0" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: transparent;">
               <children>
                  <TextField fx:id="searchField" layoutX="0.0" layoutY="0.0" prefHeight="45.0" prefWidth="300.0" promptText="   Search records..." style="-fx-background-color: #F5F5F5; -fx-background-radius: 10; -fx-border-color: #E0E0E0; -fx-border-radius: 10; -fx-border-width: 1;">
                     <font>
                        <Font name="Poppins Regular" size="14.0" />
                     </font>
                  </TextField>
                  <Circle fill="#96a0a800" layoutX="270.0" layoutY="22.5" radius="10.0" stroke="#00897B" strokeType="INSIDE" strokeWidth="2.5" />
                  <Line endX="7.0" endY="7.0" layoutX="274.0" layoutY="27.0" startX="0.0" startY="0.0" stroke="#00897B" strokeLineCap="ROUND" strokeWidth="2.5" />
               </children>
            </Pane>
            
            <!-- Date Picker -->
            <DatePicker fx:id="datePicker" layoutX="1250.0" layoutY="75.0" prefHeight="45.0" prefWidth="180.0" promptText="Filter by date" style="-fx-background-radius: 10; -fx-background-color: #F5F5F5;">
               <effect>
                  <DropShadow>
                     <color>
                        <Color opacity="0.1" />
                     </color>
                  </DropShadow>
               </effect>
            </DatePicker>
            
            <!-- Note: Filter action is now driven by DatePicker and Type filter directly; removed explicit filter button to simplify UI -->
            
            <!-- TableView for displaying records -->
            <TableView fx:id="recordsTable" layoutX="30.0" layoutY="140.0" prefHeight="655.0" prefWidth="1760.0" styleClass="records-table" style="-fx-background-color: white;">
               <columns>
                  <TableColumn fx:id="studentNumberCol" prefWidth="200.0" text="STUDENT #" style="-fx-alignment: CENTER-LEFT;">
                     <cellValueFactory>
                        <javafx.scene.control.cell.PropertyValueFactory property="studentNumber" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="firstNameCol" prefWidth="240.0" text="FIRST NAME" style="-fx-alignment: CENTER-LEFT;">
                     <cellValueFactory>
                        <javafx.scene.control.cell.PropertyValueFactory property="firstName" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="lastNameCol" prefWidth="240.0" text="LAST NAME" style="-fx-alignment: CENTER-LEFT;">
                     <cellValueFactory>
                        <javafx.scene.control.cell.PropertyValueFactory property="lastName" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="emailCol" prefWidth="400.0" text="EMAIL" style="-fx-alignment: CENTER-LEFT;">
                     <cellValueFactory>
                        <javafx.scene.control.cell.PropertyValueFactory property="email" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="dateCol" prefWidth="380.0" text="DATE/TIME" style="-fx-alignment: CENTER;">
                     <cellValueFactory>
                        <javafx.scene.control.cell.PropertyValueFactory property="createdAt" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="typeCol" prefWidth="300.0" text="TYPE" style="-fx-alignment: CENTER;">
                     <cellValueFactory>
                        <javafx.scene.control.cell.PropertyValueFactory property="recordType" />
                     </cellValueFactory>
                  </TableColumn>
               </columns>
            </TableView>
         </children>
      </Pane>
   </children>
</AnchorPane>
