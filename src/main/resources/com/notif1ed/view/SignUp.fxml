            <Text layoutX="264.0" layoutY="266.0" text="Create Account">
               <font>
                  <Font name="Arial Black" size="41.0" />
               </font>
            </Text>
            
            <Label layoutX="85.0" layoutY="312.0" text="Full Name:">
               <font>
                  <Font name="Arial Rounded MT Bold" size="20.0" />
               </font>
